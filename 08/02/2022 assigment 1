#include<stdio.h>
int main()
{
int i,j,k;
int num[5]={1,2,3,4,5};
int odd[5];
int even[5];
j=0;
k=0;
for(i=0;i<5;i++)
{
if(num[i]%2==0)
{
even[j]=num[i];
j++;
}
else
{
odd[k]=num[i];
k++;
}
}
printf("even numbers:");
for(i=0;i<j;i++)
{
printf("%d",even[i]);
}
printf("\nodd numbers:");
for(i=0;i<k;i++)
{
printf("%d",odd[i]);
}
printf("\n");
return 0;
}

