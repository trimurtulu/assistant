#include<stdio.h>
void main()
{
int i,n,sum=0;
int*a;
printf("Enter the size of array A \n");
scanf("%d",&n);
a=(int*)(n*size of(int));
printf("Enter elements of the list\n");
for(i=0;i<n;i++)
{
scanf("%d",a+i);
}
for(i=0;i<n;i++)
{
sum=sum+ *(a+i);
}
printf("Sum of all elements in array=%d\n",sum);
return 0;
}
